@model IEnumerable<Anemone.Models.EF.slide>

@{
    ViewBag.Title = "ListSlide";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
    Danh sách Slide}




<p>
    @Html.ActionLink("Thêm mới hình ảnh slide", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        <img src="~/assets/images/slides/@item.image.Trim()" height="99" width="150" />
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.status)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.slideID }) |
        

    
        <button class="btn btn-danger"><a href="/Slide/Delete?id=@item.slideID" onclick="return confirm('Bạn có chắc chắn muốn xóa Slide này?');">Xóa</a></button>
   
   @* @Html.ActionLink("Delete", "Delete", new { id = item.slideID })*@
    </td>
</tr>
    }

</table>
