@{
    List<Anemone.Models.OrderdetailModel> data = ViewBag.Data;
    var dem = 0;
}

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0">Chi tiết đặt hàng của bạn</div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">
        @if (ViewBag.Count > 0)
        {
            <div class="row mb-5">
                <form class="col-md-12" method="post">
                    <div class="site-blocks-table">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="product-stt">STT</th>
                                    <th class="product-thumbnail">Ảnh</th>
                                    <th class="product-name">Sản phẩm</th>
                                    <th class="product-quantity">Số lượng</th>
                                    <th class="product-total">Tổng tiền</th>
                                    <th class="product-time">Ngày đặt</th>
                                    <th class="product-status-ad">Trạng thái</th>
                                    @*<th class="product-status-cus">Xác nhận</th>*@
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var i in data)
                                {
                                    dem++;
                                    <tr>
                                        <td class="product-stt">
                                            <div>@dem</div>
                                        </td>
                                        <td class="product-thumbnail">
                                            <img src="~/assets/images/product/@i.imageO" alt="Image" class="img-fluid">
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 text-black">@i.nameO</h2>
                                        </td>
                                        <td>@i.countO</td>
                                        <td>@i.sumPrice VNĐ</td>
                                        <td>@i.DateOrder.ToString("dd/MM/yyyy")</td>
                                        <td class="product-name">
                                            @if (i.status)
                                            {
                                                <h2 class="h5 text-black">Đã xử lý</h2>
                                            }
                                            else
                                            {
                                                <h2 class="h5 text-black">Đang chời xử lý</h2>
                                            }
                                        </td>
                                        @* <td class="product-name">
                                                @if (i.status)
                                                {
                                                    <h2 class="h5 text-black">N/A</h2>
                                                }
                                                else
                                                {
                                                    <h2 class="h5 text-black">N/A</h2>
                                                }

                                            </td>*@
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        }
        else
        {
            <div class="container">
                <div class="row">
                    <div class=" text-center mb-5 col-12">
                        <h2 class="text-uppercase"><i>Chưa có đơn hàng nào hoàn thành</i></h2>
                    </div>
                    <p>
                        @Html.ActionLink("Tiếp tục mua hàng", "Index", "Product")
                    </p>
                </div>
            </div>
        }




    </div>



