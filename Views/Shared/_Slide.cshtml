@{
    Anemone.Models.DAO.SlideDAO db = new Anemone.Models.DAO.SlideDAO();
    Anemone.Models.DAO.ContactDAO cnt = new Anemone.Models.DAO.ContactDAO();
    var ct = cnt.ListAll().First();
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">

        @{
            var fr = db.ListSlide().First();
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@Url.Content("~/assets/images/slides/"+fr.image)" height="500px" />
                </div>

            }

            foreach (var item in db.ListSlide())
            {
                <div class="carousel-item ">
                    <img class="d-block w-100" src="@Url.Content("~/assets/images/slides/"+item.image)" height="500px" />
                    <div class="carousel-caption d-none d-md-block">
                        <h5></h5>
                        <p></p>
                    </div>
                </div>
            }
            <div class="carousel-caption d-none d-md-block">
                <div class="site-block-cover-content">
                    @{
                        <h2 class="sub-title">#@ct.name Shop</h2>
                        <h3>@ct.welcome</h3>}
                    <p>
                        @Html.ActionLink("Shop Now", "Index", "Product", null, new { @class = "btn btn-black rounded-0" })
                    </p>
                </div>
            </div>

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

</div>

